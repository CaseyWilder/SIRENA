<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_picking_form_address_validation" model="ir.ui.view">
        <field name="name">stock.picking.form.address.validation</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="replace">
                <div name="address_checker">
                    <field name="partner_id" nolable="1"/>
                    <field name="is_address_validated" invisible="1"/>
                    <button name="action_validate_address" title="This address is not validated. Click to check"
                            type="object" class="btn-link text-warning m-0 ml-3" icon="fa-question-circle"
                            style="vertical-align: baseline; padding: 0 !important"
                            attrs="{'invisible': ['|', ('is_address_validated', '=', True), ('picking_type_code', '!=', 'outgoing')]}"/>
                    <button name="action_validate_address" title="This address has been validated." disabled="1"
                            type="object" class="btn-link text-primary m-0 ml-3" icon="fa-check-circle"
                            style="vertical-align: baseline; padding: 0 !important"
                            attrs="{'invisible': ['|', ('is_address_validated', '=', False), ('picking_type_code', '!=', 'outgoing')]}"/>
                </div>
            </field>
        </field>
    </record>
</odoo>
