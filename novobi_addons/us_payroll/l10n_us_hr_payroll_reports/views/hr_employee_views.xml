<odoo>
    <record id="hr_employee_payroll_report_view_form" model="ir.ui.view">
        <field name="name">hr.employee.form.payroll.app.report</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="l10n_us_hr_payroll.hr_employee_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']/group" position="inside">
                <group name="w2_info" string="W2 Information">
                    <field name="is_statutory"/>
                    <field name="is_third_party_sick_pay"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
